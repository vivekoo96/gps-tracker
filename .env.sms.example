# MSG91 SMS Configuration
# Get your API credentials from https://msg91.com/

# MSG91 Authentication Key (Required)
MSG91_AUTH_KEY=your_msg91_auth_key_here

# MSG91 Sender ID (Optional - Default: GPSAPP)
MSG91_SENDER_ID=GPSAPP

# MSG91 Route (Optional - Default: 4)
# 1 = Promotional, 4 = Transactional
MSG91_ROUTE=4

# MSG91 Country Code (Optional - Default: 91 for India)
MSG91_COUNTRY=91

# SMS Template IDs (Optional - for faster delivery)
MSG91_WELCOME_TEMPLATE_ID=
MSG91_CREDENTIALS_TEMPLATE_ID=
MSG91_DEVICE_TEMPLATE_ID=
MSG91_PASSWORD_RESET_TEMPLATE_ID=
MSG91_OTP_TEMPLATE_ID=

# SMS Configuration
SMS_DRIVER=msg91
SMS_LOGGING_ENABLED=true
SMS_LOG_CHANNEL=single

# SMS Rate Limiting
SMS_RATE_LIMITING_ENABLED=true
SMS_MAX_ATTEMPTS=5
SMS_DECAY_MINUTES=60
