    "item": [
        {
            "name": "Authentication & System",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.status === 'success') {",
                                    "    pm.collectionVariables.set(\"apiKey\", jsonData.data.api_credentials.key);",
                                    "    pm.collectionVariables.set(\"apiSecret\", jsonData.data.api_credentials.secret);",
                                    "    console.log('API Credentials updated automatically!');",
                                    "}"
                                ],
                                "type": "text/javascript",
                                "packages": {}
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v2/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v2",
                                "login"
                            ]
                        },
                        "description": "Logs in with email/password and automatically updates the collection's apiKey and apiSecret variables."
                    },
                    "response": []
                },
                {
                    "name": "Check Identity (Auth Test)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{apiKey}}",
                                "type": "text"
                            },
                            {
